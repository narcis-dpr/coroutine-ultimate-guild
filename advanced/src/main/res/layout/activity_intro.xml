<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context=".ui.activity.IntroActivity">

  <ImageView
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_gravity="center_horizontal"
    android:layout_margin="80dp"
    android:importantForAccessibility="no"
    android:scaleType="centerCrop"
    android:src="@mipmap/ic_launcher_round" />

  <com.google.android.material.button.MaterialButton
    android:id="@+id/chapter14"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="20dp"
    android:text="@string/background_processing"
    android:textAllCaps="false"
    app:cornerRadius="16dp" />

  <com.google.android.material.button.MaterialButton
    android:id="@+id/chapter15"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="20dp"
    android:text="@string/flow_examples"
    android:textAllCaps="false"
    app:cornerRadius="16dp" />

  <com.google.android.material.button.MaterialButton
    android:id="@+id/chapter16"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="20dp"
    android:text="@string/networking_persistence_jetpack"
    android:textAllCaps="false"
    app:cornerRadius="16dp" />

  <com.google.android.material.button.MaterialButton
    android:id="@+id/compose"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="20dp"
    android:text="@string/jetpack_compose"
    android:textAllCaps="false"
    app:cornerRadius="16dp" />

</androidx.appcompat.widget.LinearLayoutCompat>
