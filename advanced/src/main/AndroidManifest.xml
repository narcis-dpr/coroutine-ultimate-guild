<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.coroutines.advanced">

    <application
        android:name=".coroutinesInAndroid.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".coroutinesInAndroid.ui.activity.DisneyActivity"
            android:exported="false" />

        <activity
            android:name=".coroutinesInAndroid.ui.activity.IntroActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".coroutinesInAndroid.ui.compose.DisneyComposeActivity"
            android:exported="false"
            android:label="@string/title_activity_disney" />
        <activity
            android:name=".coroutinesInAndroid.ui.activity.BackgroundProcessingActivity"
            android:exported="false" />
    </application>
</manifest>